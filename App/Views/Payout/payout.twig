{% extends "Payout/index.twig" %}

{% block header %}
    {{ parent() }}
    <a href="/payout/payout">->Payout Page</a>
{% endblock %}

{% block body %}
    <h1>Payout Page</h1>
    <form action="/payout/doPayout" method="post">
        <input type="text" name="method" value="card" disabled><br>
        <input type="text" name="destination_id" placeholder="Destination ID"><br>
        <input type="text" name="amount" placeholder="Amount"><br>
        <input type="text" name="description" placeholder="Put your description"><br>
        <input type="text" name="order_id" placeholder="Order ID is generated automat."><br>
        <input type="submit" value="Payout!">
    </form>
{% endblock %}


{% block js %}
    {{ parent() }}
{% endblock %}