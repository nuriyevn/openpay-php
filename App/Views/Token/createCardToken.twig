{% extends "Token/index.twig" %}

{% block header %}
    {{ parent() }}
    <h1>Create a Card token</h1>
{% endblock %}

{% block body %}
    <!--form action="/token/doCreateCard" type="POST"-->
    <br>
        <input type="text" placeholder="Card Number" name="card_number" value="4111111111111111"><br>
        <input type="text" placeholder="Holder Name" name="holder_name" value="Juan Perez Ramirez"><br>
        <input type="text" placeholder="Expiration Year" name="expiration_year" value="20"><br>
        <input type="text" placeholder="Expiration Month" name="expiration_month" value="12"><br>
        <input type="text" placeholder="CVV2" name="cvv2" value="110"><br>
        <input type="text" placeholder="Address line1" name="line1" value="Av 5 de Febrero"><br>
        <input type="text" placeholder="Address line2" name="line2" value="Roble 207"><br>
        <input type="text" placeholder="Address line3" name="line3" value="col carillo"><br>
        <input type="text" placeholder="Postal Code" name="postal_code" value="76900"><br>
        <input type="text" placeholder="City" name="city" value="Queretaro"><br>
        <input type="text" placeholder="State" name="state" value="Queretaro"><br>
        <input type="text" placeholder="Country Code" name="country_code" value="MX"><br>
        <input type="submit" value="Create a token!" name="submit"><br>
        <h3>Token status:</h3>
        <input type="text" placeholder="Token status" name="status"><br>
        <p id="error_details"></p>
        <h3>Token id:</h3>
        <input type="text" placeholder="Token ID" name="id"><br>
    <!--/form-->
{% endblock %}

{% block js %}
    <script src="/js/jquery-ui-1.11.4.custom/external/jquery/jquery.js"></script>
    <script src="/js/openpay.v1.js"></script>
    <script src="/js/openpay-data.v1.js"></script>
    <script src="/js/openpayCredentials.js"></script>
    <script src="/js/createCardToken.js"></script>
{% endblock %}

