{% extends "Card/index.twig" %}

{% block body %}
    <h1>Add a card</h1>
    <form action="/card/doAdd" type="POST">
        <input type="text" placeholder="Holder Name" name="holder_name" value="Luis Pérez"><br>
        <input type="text" placeholder="Card Number" name="card_number" value="4111111111111111"><br>
        <input type="text" placeholder="CVV2" name="cvv2" value="123"><br>
        <input type="text" placeholder="Expiration Month" name="expiration_month" value="12"><br>
        <input type="text" placeholder="Expiration Year" name="expiration_year" value="16"><br>

        <h3>Address:<br></h3>
        <input type="text" placeholder="Line 1" name="line1" value="Av. 5 de Febrero No. 1"><br>
        <input type="text" placeholder="Line 2" name="line2" value="Col. Felipe Carrillo Puerto"><br>
        <input type="text" placeholder="Line 3" name="line3" value="Zona industrial Carrillo Puerto"><br>
        <input type="text" placeholder="Postal Code" name="postal_code" value="76920"><br>
        <input type="text" placeholder="State" name="state" value="Querétaro"><br>
        <input type="text" placeholder="City" name="city" value="Querétaro"><br>
        <input type="text" placeholder="Country Code" name="country_code" value="MX"><br>
        <input type="submit" value="Add Card!"><br>
    </form>
{% endblock %}